<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane fx:id="root" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.ClassroomController">

    <top>
        <HBox spacing="10">
            <Label text="Classroom" style="-fx-font-size: 20pt; -fx-font-weight: bold;"/>
            <Button fx:id="addStudentButton" text="Add Student" onAction="#handleAddStudent"/>
        </HBox>
    </top>

    <center>
        <TableView fx:id="studentTable" prefWidth="400" prefHeight="300">
            <columns>
                <TableColumn fx:id="firstNameColumn" text="First Name"/>
                <TableColumn fx:id="lastNameColumn" text="Last Name"/>
                <TableColumn fx:id="gradeColumn" text="Grade"/>
            </columns>
        </TableView>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <Button fx:id="saveButton" text="Save" onAction="#handleSave"/>
            <Button fx:id="cancelButton" text="Cancel" onAction="#handleCancel"/>
        </HBox>
    </bottom>

</BorderPane>